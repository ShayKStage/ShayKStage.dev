---
export interface Props {
	title: string;
}

import '../../styles/global.scss?global'
import 'primeicons/primeicons.css';
import {When} from "@astropub/flow";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="stylesheet" href="/crucial.css/crucial.css" />
		<link rel="stylesheet" href="/crucial.css/utilities.css" />
		<!--<link rel="icon" type="image/svg+xml" href="/favicon.svg" />-->
		<link href="/styles/prism-duotone-sea.css" rel="stylesheet" />
		<link href="/styles/prism.css" rel="stylesheet" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body x-data="{ menu_open: false }">
		<header>
			<div id="menu-toggle" @click="menu_open = ! menu_open">
				<span class="pi pi-bars" style="font-size: 3rem" />
			</div>
			<div id="title">
				<When test1={title != "314ShadePi"}>
					<h1><a href="/">314ShadePi</a>&nbsp;- {title}</h1>
					<Fragment slot="else">
						<h1>{title}</h1>
					</Fragment>
				</When>
			</div>
			<div id="spacer-header" />
		</header>
		<div x-cloak x-show="menu_open"
			 x-transition:enter="transition ease-in duration-10"
			 x-transition:enter-start="opacity-0"
			 x-transition:enter-end="opacity-100"
			 x-transition:leave="transition ease-out duration-10"
			 x-transition:leave-start="opacity-100"
			 x-transition:leave-end="opacity-0"
			 @click.outside="menu_open = false"
			 id="menu">
			<nav>
				<ol id="">
					<li><a href="/">314ShadePi</a></li>
					<li><a href="/projects">projects</a></li>
					<li><a href="https://github.com/314ShadePi" target="_blank">my github</a></li>
				</ol>
			</nav>
		</div>
		<div id="space-top" />
		<main>
			<slot />
		</main>
	</body>
</html>
